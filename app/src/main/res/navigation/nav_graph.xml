<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onBoardFragment"
    >

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/search_anim1"
            app:exitAnim="@anim/search_anim2"
            app:popEnterAnim="@anim/search_anim3"
            app:popExitAnim="@anim/animation2" />
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4" />
        <action
            android:id="@+id/action_homeFragment_to_filterBottomSheetFragment"
            app:destination="@id/filterBottomSheetFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_savedFragment"
            app:destination="@id/savedFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4" />
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4" />
    </fragment>
    <fragment
        android:id="@+id/savedFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.SavedFragment"
        android:label="fragment_saved"
        tools:layout="@layout/fragment_saved" >
        <action
            android:id="@+id/action_savedFragment_to_cartFragment"
            app:destination="@id/cartFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4" />
        <action
            android:id="@+id/action_savedFragment_to_detailsFragment2"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_accountFragment"
            app:destination="@id/accountFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4" />
        <argument
            android:name="productId"
            app:argType="integer"
            android:defaultValue="0"
            />

        <action
            android:id="@+id/action_cartFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4" />
        <action
            android:id="@+id/action_cartFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4"/>
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="productId"
            app:argType="integer" />
        <action
            android:id="@+id/action_detailsFragment_to_savedFragment"
            app:destination="@id/savedFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4" />
    </fragment>
    <fragment
        android:id="@+id/filterBottomSheetFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.FilterBottomSheetFragment"
        android:label="fragment_filter_bottom_sheet"
        tools:layout="@layout/fragment_filter_bottom_sheet" />
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.CheckoutFragment"
        android:label="fragment_checkout"
        tools:layout="@layout/fragment_checkout">
        <argument
            android:name="productId"
            app:argType="integer" />

        <action
            android:id="@+id/action_checkoutFragment_to_mapsFragment"
            app:destination="@id/mapsFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4"/>
        <action
            android:id="@+id/action_checkoutFragment_to_addCardFragment"
            app:destination="@id/addCardFragment"
            app:enterAnim="@anim/animation"
            app:exitAnim="@anim/animation2"
            app:popEnterAnim="@anim/animation3"
            app:popExitAnim="@anim/animation4"/>
        <action
            android:id="@+id/action_checkoutFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/addCardFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.AddCardFragment"
        android:label="fragment_add_card"
        tools:layout="@layout/fragment_add_card" />
    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board" >
        <action
            android:id="@+id/action_onBoardFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.shopsphere.CleanArchitecture.ui.views.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <action
        android:id="@+id/action_registerFragment_to_homeFragment"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />
</navigation>